<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#1C1C1E"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Photo"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/btnCompare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="Compare" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_save"
            android:contentDescription="Save"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Main Image View -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomPanel">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="Photo" />

        <ImageView
            android:id="@+id/imageViewOriginal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="Original Photo" />
    </FrameLayout>

    <!-- Bottom Panel - FIXED HEIGHT, NO BOTTOM SHEET -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#1C1C1E"
        android:elevation="8dp">

        <!-- Slider Container -->
        <LinearLayout
            android:id="@+id/seekBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#2C2C2E"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/seekBarLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Brightness"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#007AFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Tab Layout -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="#1C1C1E">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <Button
                    android:id="@+id/tabAdjust"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Adjust"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:background="@drawable/tab_selected"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/tabFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Filters"
                    android:textColor="#8E8E93"
                    android:textSize="14sp"
                    android:background="@drawable/tab_unselected"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/tabTools"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Tools"
                    android:textColor="#8E8E93"
                    android:textSize="14sp"
                    android:background="@drawable/tab_unselected"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/tabEffects"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Effects"
                    android:textColor="#8E8E93"
                    android:textSize="14sp"
                    android:background="@drawable/tab_unselected"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Content Container - FIXED HEIGHT -->
        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1C1C1E">

            <!-- Adjust Content -->
            <HorizontalScrollView
                android:id="@+id/adjustContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Brightness -->
                    <LinearLayout
                        android:id="@+id/btnBrightness"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconBrightness"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_day"
                            android:contentDescription="Brightness" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brightness"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Contrast -->
                    <LinearLayout
                        android:id="@+id/btnContrast"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconContrast"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_preferences"
                            android:contentDescription="Contrast" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contrast"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Saturation -->
                    <LinearLayout
                        android:id="@+id/btnSaturation"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconSaturation"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:contentDescription="Saturation" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saturation"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Highlights -->
                    <LinearLayout
                        android:id="@+id/btnHighlights"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconHighlights"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            android:contentDescription="Highlights" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Highlights"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Shadows -->
                    <LinearLayout
                        android:id="@+id/btnShadows"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconShadows"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_compass"
                            android:contentDescription="Shadows" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shadows"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Sharpness -->
                    <LinearLayout
                        android:id="@+id/btnSharpness"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconSharpness"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:contentDescription="Sharpness" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sharpness"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Filters Content -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filtersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false" />

            <!-- Tools Content -->
            <LinearLayout
                android:id="@+id/toolsContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Crop -->
                    <LinearLayout
                        android:id="@+id/btnCrop"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconCrop"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_crop"
                            android:contentDescription="Crop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crop"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Rotate -->
                    <LinearLayout
                        android:id="@+id/btnRotate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconRotate"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_rotate"
                            android:contentDescription="Rotate" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rotate"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Flip -->
                    <LinearLayout
                        android:id="@+id/btnFlip"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconFlip"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_revert"
                            android:contentDescription="Flip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flip"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Undo -->
                    <LinearLayout
                        android:id="@+id/btnUndo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconUndo"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_revert"
                            android:contentDescription="Undo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Undo"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Redo -->
                    <LinearLayout
                        android:id="@+id/btnRedo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconRedo"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_revert"
                            android:rotation="180"
                            android:contentDescription="Redo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Redo"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Share -->
                    <LinearLayout
                        android:id="@+id/btnShare"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iconShare"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_share"
                            android:contentDescription="Share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Effects Content -->
            <LinearLayout
                android:id="@+id/effectsContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Effects coming soon..."
                    android:textColor="#8E8E93"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>